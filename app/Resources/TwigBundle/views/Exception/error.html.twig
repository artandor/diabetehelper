{% extends "base.html.twig" %}

{% block title %}
    {{ 'An Error Occurred:'|trans }} {{ status_text }}
{% endblock title %}

{% block body %}
    <h1>{{ 'Oops! An Error Occurred'|trans }}</h1>
    <h2>{{ 'The server returned a'|trans }} "{{ status_code }} {{ status_text }}".</h2>

    <div>
        {{ 'Something is broken. Please let us know what you were doing when this error occurred.
            We will fix it as soon as possible. Sorry for any inconvenience caused.'|trans }}
    </div>
{% endblock body %}
