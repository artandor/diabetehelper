{% extends 'DiabeteHelperBundle::layout.html.twig' %}

{% block title %}
    {{ 'edit meal'|trans|capitalize }} {{ parent() }}
{% endblock title %}

{% block breadcrumb %}
    {{ parent() }}
    <li><a href="{{ path('meal_index') }}">{{ 'meals'|trans|capitalize }}</a></li>
    <li><a href="{{ path('meal_edit', { 'id': meal.id }) }}">{{ 'edit meal'|trans|capitalize }}</a></li>
{% endblock breadcrumb %}

{% block body %}
    <h1>Meal edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('meal_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
